<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form method="post" action="/delete">
      <div class="item">
        <input type="checkbox" name="itemId" value="<%= newListItems[i]._id%>" onchange="this.form.submit()">
        <p class="itemName"><%=  newListItems[i].name  %></p><p class="timeName"><%= newListItems[i].hrs%> Hrs <%=newListItems[i].mins %> Mins  </p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle%>" >
    </form>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off"><br>
        <div class="timeSlots">
          <input type="text" name="hours" placeholder="Hrs" autocomplete="off">
          <input type="text" name="mins" placeholder="Mins" autocomplete="off">
        </div>
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
      <div  class="show">
        <% if((totalHrs+totalMins)===0){ %>
          <p>All Set! ðŸŽŠ</p>
        <% }else{ %>
          <p><%= totalHrs %> Hrs <%= totalMins %> Mins</p>
        <% } %>
      </div>
  </div>

